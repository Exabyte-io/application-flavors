{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2019", "dom"],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "noEmitOnError": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./lib/js",
    "baseUrl": "./",
    "rootDir": "./src/js",
    "types": ["node"]
  },
  "include": [
    "src/js/**/*",
    "src/js/data.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
  ],
  "ts-node": {
    "files": true,
    "compilerOptions": {}
  },
}
